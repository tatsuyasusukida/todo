extends ../layout

block title
  title Todoの登録｜ToDoリスト管理アプリ

block breadcrumb
  nav.mt-3(aria-label='パンくずリスト')
    .container-fluid
      ol.breadcrumb
        li.breadcrumb-item
          a(href='../') ToDo
        li.breadcrumb-item
          a(href='./' aria-current='page') 登録

block main
  main
    .container-fluid
      h1 ToDoの登録
      nav.mt-3(aria-label='メニュー')
        .d-flex.flex-wrap.gap-2
          a.btn.btn-outline-secondary(href='../') 戻る
      form.mt-3(role='form' method='POST')
        .form-group.mb-3
          label.form-label(for='content') ToDoの内容
          input.form-control(type='text' name='content' id='content' value=form.content class={'is-invalid': validation && validation.content === false})
          .invalid-feedback ToDoの内容を入力してください。
        .d-grid
          button.btn.btn-primary(type='submit') 登録
